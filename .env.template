# OpenAI API Configuration
# Required for embeddings and LLM responses
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model Configuration
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_LLM_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.1

# Optional: Alternative embedding providers
# HUGGINGFACE_API_KEY=your_huggingface_key_here

# ChromaDB Configuration
# For local ChromaDB storage path
CHROMA_DB_PATH=./chroma_db

# For remote ChromaDB server (leave empty to use local)
CHROMA_HOST=
CHROMA_PORT=

# Example remote ChromaDB settings:
# CHROMA_HOST=192.168.0.114
# CHROMA_PORT=7000

# ChromaDB telemetry settings (recommended to disable)
ANONYMIZED_TELEMETRY=False
CHROMA_TELEMETRY=False

# System Configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K_RETRIEVAL=5

# Legal Document URL (Taiwan Food Safety Act)
FOOD_SAFETY_ACT_URL=https://law.moj.gov.tw/LawClass/LawAll.aspx?pcode=L0040001

# Weights & Biases Configuration
# Get your API key from: https://wandb.ai/settings
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=food-safety-rag
WANDB_ENTITY=your_username_or_team
WANDB_MODE=online
# Set to "disabled" to turn off W&B logging, "offline" for offline logging